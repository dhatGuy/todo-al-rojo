{
  "name": "@repo/server",
  "types": "./src/index.ts",
  "exports": {
    "./hc": {
      "import": {
        "default": "./dist/src/hc.js",
        "types": "./dist/src/hc.d.ts"
      }
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "tsc",
    "db:studio": "bun with-env drizzle-kit studio",
    "db:push": "bun with-env drizzle-kit push",
    "generate": "bunx @better-auth/cli generate",
    "start": "bun src/index.ts",
    "start:dev": "bun --env-file=../../.env dist/src/index.js",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/zod-validator": "^0.7.0",
    "@repo/validators": "workspace:*",
    "@t3-oss/env-core": "^0.13.6",
    "better-auth": "^1.2.8",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "pg": "^8.16.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@types/bun": "^1.2.15",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.15.4",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
