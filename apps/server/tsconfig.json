{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["@types/bun"],
    "jsx": "react-jsx",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
